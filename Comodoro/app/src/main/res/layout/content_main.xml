<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@drawable/back">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view5"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

       <TextView android:text="Welcome to Comodoro"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:textColor="#9c27b0"
           android:textStyle="bold"
           android:textSize="30dp"/>
    </android.support.v7.widget.CardView>



    <LinearLayout android:id="@+id/left"
        android:layout_width="185dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/card_view5"
        >


        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/sub">

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp">


            <TextView android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="50dp"
                android:textColor="#9c27b0"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/card_view1"
            android:layout_margin="5dp"
            >

        <TextView android:id="@+id/seconds"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="#9c27b0"
            />
        </android.support.v7.widget.CardView>


        </RelativeLayout>

        <Button android:id="@+id/start"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_alignParentBottom="true"
            android:text="Start Pomodoro"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:background="#9c27b0"
            android:layout_marginRight="30dp"></Button>

        <Button android:id="@+id/end"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:text="End Pomodoro"
            android:textColor="#ffffff"
            android:background="#9c27b0"></Button>
    </LinearLayout>

    <LinearLayout android:id="@+id/right"
        android:layout_toRightOf="@+id/left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/card_view5">


        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="10dp"
            android:background="#ce93d8"
            android:layout_margin="5dp"
            >

        <TextView android:id="@+id/to_do"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#9c27b0"
            android:text="To_Do_List"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>



        <TextView android:id="@+id/tasks"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addtask"
            android:text="Add Item"
            android:textColor="#ffffff"
            android:background="#9c27b0"
            android:layout_alignParentBottom="true"
            />


    </LinearLayout>
        />

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view6"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        >
      <LinearLayout android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical">
        <TextView android:text="Make your top managers rich and they will make you rich."
            android:textSize="20dp"
            android:textColor="#9c27b0"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView android:text="-Robert H. Johnson"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"

            />
     </LinearLayout>
     </android.support.v7.widget.CardView>

</RelativeLayout>
